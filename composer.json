{
    "name": "coisa/service-provider",
    "description": "Interop ServiceProvider utility tools.",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Felipe Say√£o Lobato Abreu",
            "email": "github@mentor.dev.br"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "coisa/exceptions": "^1.0",
        "container-interop/service-provider": "^0.4.0",
        "psr/container": "^1.0 || ^2.0"
    },
    "require-dev": {
        "coisa/php-cs-fixer": "^2.1",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.5",
        "sensiolabs/security-checker": "^6.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "CoiSA\\ServiceProvider\\": "src/"
        },
        "files": [
            "config/autoload.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "CoiSA\\ServiceProvider\\Test\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    },
    "scripts": {
        "check": [
            "@lint",
            "@test",
            "@sniff",
            "@cs-check"
        ],
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "lint": "parallel-lint --exclude vendor .",
        "sniff": "phpcs",
        "test": "phpunit --color=always"
    }
}
